# Makefile to build and flash thermidity.
#
# Simplified version from: https://github.com/hexagon5un/AVR-Programming

MCU = atmega328p
# for NetBeans, see https://www.nongnu.org/avr-libc/user-manual/using_tools.html
MMCU = __AVR_ATmega328P__
F_CPU = 8000000
BAUD = 9600
PROGRAMMER_TYPE = avrispmkII
PROGRAMMER_ARGS = 

MAIN = thermidity.c
SRC = bitmaps.c dejavu.c display.c eink.c font.c meter.c spi.c sram.c \
	unifont.c usart.c utils.c

CC = avr-gcc
OBJCOPY = avr-objcopy
OBJDUMP = avr-objdump
AVRSIZE = avr-size
AVRDUDE = avrdude

CFLAGS = -mmcu=$(MCU) -DF_CPU=$(F_CPU)UL -DBAUD=$(BAUD) 
CFLAGS += -D$(MMCU)
CFLAGS += -Os -I.
CFLAGS += -funsigned-char -funsigned-bitfields -fpack-struct -fshort-enums 
CFLAGS += -Wall -Wstrict-prototypes
CFLAGS += -g -ggdb
CFLAGS += -ffunction-sections -fdata-sections -Wl,--gc-sections -mrelax
CFLAGS += -std=gnu99
# https://gcc.gnu.org/bugzilla/show_bug.cgi?id=105523
# CFLAGS += --param=min-pagesize=0

TARGET = $(strip $(basename $(MAIN)))
SRC += $(TARGET).c

OBJ = $(SRC:.c=.o) 
OBJ = $(SRC:.S=.o)
	
$(TARGET).elf: bitmaps.h dejavu.h display.h eink.h font.h meter.h pins.h \
	spi.h sram.h unifont.h usart.h utils.h Makefile

all: $(TARGET).hex

%.hex: %.elf
	$(OBJCOPY) -R .eeprom -O ihex $< $@

%.elf: $(SRC)
	$(CC) $(CFLAGS) $(SRC) --output $@ 

# Auto-generated lookup tables.

$(TARGET).elf: unifont-lookup.h dejavu-lookup.h

unifont-lookup.h: unifont.c gen-lookup.py Makefile
	./gen-lookup.py $< "Glyph glyphs[]" "};" QUESTION_MARK  \
		"static const __flash uint8_t lookup_unifont[256]" > $@

dejavu-lookup.h: dejavu.c gen-lookup.py Makefile
	./gen-lookup.py $< "Glyph glyphs[]" "};" QUESTION_MARK  \
		"static const __flash uint8_t lookup_dejavu[256]" > $@

disasm: $(TARGET).lst

eeprom: $(TARGET).eeprom

%.lst: %.elf
	$(OBJDUMP) -S $< > $@
 
size:  $(TARGET).elf
	$(AVRSIZE) -G $(TARGET).elf

clean:
	rm -f $(TARGET).elf $(TARGET).hex $(TARGET).obj \
	$(TARGET).o $(TARGET).d $(TARGET).eep $(TARGET).lst \
	$(TARGET).lss $(TARGET).sym $(TARGET).map $(TARGET)~ \
	$(TARGET).eeprom \
	unifont-lookup.h dejavu-lookup.h

flash: $(TARGET).hex 
	$(AVRDUDE) -c $(PROGRAMMER_TYPE) -p $(MCU) $(PROGRAMMER_ARGS) -U flash:w:$<
